/*
7-1 编写一个函数计算厄密多项式
*/

int hermitel(int n, int x)
{
	int a = 0;
	if (n <= 0)
		a = 1;
	else if (n == 1)
		a = 2 * x;
	else if (n >= 2)
		a = 2 * x*hermitel(n - 1, x) - 2 * (n - 1)*hermitel(n - 2, x);
	return a;
}

int main(void)
{
	int n, x,s = 0;
	printf("输入 n x\n");
	scanf("%d", &n);
	scanf("%d", &x);
	s = hermitel(n, x);
	printf("%d\n", s);

	system("pause");
	return 0;
}
